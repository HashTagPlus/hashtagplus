<?php
namespace Hash;

use Hash\Model\Hash;
use Hash\Model\HashTable;
use Zend\Db\ResultSet\ResultSet;
use Zend\Db\TableGateway\TableGateway;


class Module
{
    public function getAutoloaderConfig()
    {
        return array(
            'Zend\Loader\ClassMapAutoloader' => array(
                __DIR__ . '/autoload_classmap.php',
            ),
            'Zend\Loader\StandardAutoloader' => array(
                'namespaces' => array(
                    __NAMESPACE__ => __DIR__ . '/src/' . __NAMESPACE__,
                ),
            ),
        );
    }

    public function getConfig()
    {
        return include __DIR__ . '/config/module.config.php';
    }

	
	// Add this method:
    public function getServiceConfig()
    {
        return array(
            'factories' => array(
                'Hash\Model\HashTable' =>  function($sm) {
                    $tableGateway = $sm->get('HashTableGateway');
                    $table = new HashTable($tableGateway);
                    return $table;
                },
                'HashTableGateway' => function ($sm) {
                    $dbAdapter = $sm->get('Zend\Db\Adapter\Adapter');
                    $resultSetPrototype = new ResultSet();
                    $resultSetPrototype->setArrayObjectPrototype(new Hash());
                    return new TableGateway('hash', $dbAdapter, null, $resultSetPrototype);
                },
            ),
        );
    }



}
