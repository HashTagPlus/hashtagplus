<?php
namespace Hash\Controller;

use Zend\Mvc\Controller\AbstractActionController;
use Zend\View\Model\ViewModel;
use Hash\Model\Hash;          // <-- Add this import
use Hash\Form\HashForm;       // <-- Add this import


class HashController extends AbstractActionController
{
	protected $hashTable;
	
	public function getHashTable()
    {
        if (!$this->hashTable) {
            $sm = $this->getServiceLocator();
            $this->hashTable = $sm->get('Hash\Model\HashTable');
        }
        return $this->hashTable;
    }

    public function indexAction()
    {
    	return new ViewModel(array(
            'hashes' => $this->getHashTable()->fetchAll(),
        ));
    }

        public function addAction()
    {
        $form = new HashForm();
        $form->get('submit')->setValue('Add');

        $request = $this->getRequest();
        if ($request->isPost()) {
            $hash = new Hash();
            $form->setInputFilter($hash->getInputFilter());
            $form->setData($request->getPost());

            if ($form->isValid()) {
                $hash->exchangeArray($form->getData());
                $this->getHashTable()->saveHash($hash);

                // Redirect to list of albums
                return $this->redirect()->toRoute('hash');
            }
        }
        return array('form' => $form);
    }


    public function editAction()
    {
        $id = (int) $this->params()->fromRoute('id', 0);
        if (!$id) {
            return $this->redirect()->toRoute('hash', array(
                'action' => 'add'
            ));
        }

        // Get the Album with the specified id.  An exception is thrown
        // if it cannot be found, in which case go to the index page.
        try {
            $hash = $this->getHashTable()->getHash($id);
        }
        catch (\Exception $ex) {
            return $this->redirect()->toRoute('hash', array(
                'action' => 'index'
            ));
        }

        $form  = new HashForm();
        $form->bind($hash);
        $form->get('submit')->setAttribute('value', 'Edit');

        $request = $this->getRequest();
        if ($request->isPost()) {
            $form->setInputFilter($hash->getInputFilter());
            $form->setData($request->getPost());

            if ($form->isValid()) {
                $this->getHashTable()->saveHash($form->getData());

                // Redirect to list of entries
                return $this->redirect()->toRoute('hash');
            }
        }

        return array(
            'id' => $id,
            'form' => $form,
        );
    }

    public function deleteAction()
    {
        $id = (int) $this->params()->fromRoute('id', 0);
        if (!$id) {
            return $this->redirect()->toRoute('hash');
        }

        $request = $this->getRequest();
        if ($request->isPost()) {
            $del = $request->getPost('del', 'No');

            if ($del == 'Yes') {
                $id = (int) $request->getPost('id');
                $this->getHashTable()->deleteHash($id);
            }

            // Redirect to list of albums
            return $this->redirect()->toRoute('hash');
        }

        return array(
            'id'    => $id,
            'hash' => $this->getHashTable()->getHash($id)
        );
    }

}
